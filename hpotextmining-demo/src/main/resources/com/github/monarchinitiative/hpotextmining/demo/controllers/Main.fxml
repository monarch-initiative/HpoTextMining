<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>


<SplitPane dividerPositions="0.29797979797979796" xmlns="http://javafx.com/javafx/8.0.121"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.github.monarchinitiative.hpotextmining.demo.controllers.Main">
    <items>
        <StackPane fx:id="leftStackPane"/>
        <ScrollPane fitToHeight="true" fitToWidth="true" maxHeight="1.7976931348623157E308">
            <content>
                <SplitPane dividerPositions="0.6829573934837093" orientation="VERTICAL">
                    <items>
                        <StackPane fx:id="textMiningStackPane"/>
                        <AnchorPane>
                            <children>
                                <Label layoutX="448.0" layoutY="5.0" text="Approved terms" AnchorPane.leftAnchor="448.0"
                                       AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="5.0">
                                    <font>
                                        <Font name="System Bold" size="16.0"/>
                                    </font>
                                </Label>
                                <TableView fx:id="hpoTermsTableView" layoutY="30.0" AnchorPane.bottomAnchor="40.0"
                                           AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                                           AnchorPane.topAnchor="30.0">
                                    <columns>
                                        <TableColumn fx:id="hpoIdTableColumn" editable="false"
                                                     maxWidth="1.7976931348623157E308" prefWidth="120.0" text="ID"/>
                                        <TableColumn fx:id="observedTableColumn" editable="false" maxWidth="400.0"
                                                     prefWidth="120.0" text="Observed"/>
                                        <TableColumn fx:id="hpoNameTableColumn" editable="false" maxWidth="400.0"
                                                     prefWidth="300.0" text="Name"/>
                                        <TableColumn fx:id="definitionTableColumn" editable="false" maxWidth="3000.0"
                                                     prefWidth="500.0" text="Definition"/>
                                    </columns>
                                </TableView>
                                <HBox alignment="CENTER_LEFT" layoutY="430.0" AnchorPane.bottomAnchor="0.0"
                                      AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                                    <Button fx:id="removeButton" maxHeight="30.0" maxWidth="130.0" minHeight="30.0"
                                            minWidth="130.0" mnemonicParsing="false" onAction="#removeButtonAction"
                                            text="Remove" HBox.hgrow="NEVER">
                                        <HBox.margin>
                                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                                        </HBox.margin>
                                        <tooltip>
                                            <Tooltip text="Remove selected termId from approved terms" wrapText="true"/>
                                        </tooltip>
                                    </Button>
                                    <Region HBox.hgrow="ALWAYS"/>
                                    <Button layoutX="808.0" layoutY="15.0" maxHeight="30.0" maxWidth="130.0"
                                            minHeight="30.0" minWidth="130.0" mnemonicParsing="false"
                                            onAction="#okButtonAction" text="OK" HBox.hgrow="NEVER">
                                        <HBox.margin>
                                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                                        </HBox.margin>
                                        <tooltip>
                                            <Tooltip text="Accept approved terms and close the window" wrapText="true"/>
                                        </tooltip>
                                    </Button>
                                </HBox>
                            </children>
                        </AnchorPane>
                    </items>
                </SplitPane>
            </content>
        </ScrollPane>
    </items>
</SplitPane>
